{
    "key": "lambda-plugin",
    "name": "Expression Columns for Jira (Lambda App)",
    "description": "Decode issue fields",
    "enableLicensing": true,
    "vendor": {
        "name": "Andriy Zhdanov",
        "url": "https://app.lambdaplugin.eu"
    },
    "baseUrl": "https://easysecrets.github.io",
    "links": {
        "self": "https://easysecrets.github.io/atlassian-connect.json",
        "homepage": "https://easysecrets.github.io/atlassian-connect.json"
    },
    "authentication": {
        "type": "none"
    },
    "modules": {
        "generalPages": [{
            "location": "system.top.navigation.bar",
            "name": {
                "value": "Expression Columns for Jira"
            },
            "url": "/search.html?project.key={project.key}&v=1",
            "key": "search",
            "conditions": [{
                "condition": "user_is_logged_in"
            }]
        }],
        "jiraReports": [{
            "url": "search.html?project.key={project.key}&v=1",
            "weight": 100,
            "description": {
              "value": "View issue search results with custom expression columns"
            },
            "reportCategory": "other",
            "thumbnailUrl": "/images/lambda-search-thumb.png",
            "key": "search-report",
            "name": {
              "value": "Expression Columns for Jira"
            }
         }],
        "jiraDashboardItems": [{
            "name" : {
                "value" : "Expression Columns for Jira (Lambda App)"
            },
            "url" : "/search.html?dashboard={dashboard.id}&dashboardItem={dashboardItem.id}&v=1",
            "key" : "gadget",
            "description" : {
                "value" : "View issue search results with custom expression columns"
            },
            "thumbnailUrl": "/images/lambda-gadget-thumb.png",
            "configurable" : true,
            "conditions": [{
                "condition": "user_is_logged_in"
            }]
        }]
    },
    "apiMigrations": {
        "gdpr": true
    },
    "scopes": [
        "READ",
        "WRITE"
    ]
}
